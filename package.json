{
  "name": "mertporfolio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "postbuild": "react-snap && rm dist/200.html",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "reactSnap": {
    "include": [
      "/",
      "/Featured",
      "/TwoArmRobotProject",
      "/AirCompressorModelling",
      "/BallBalancer",
      "/BridgeCable",
      "/FluidFlowSimulation",
      "/InvertedPendulum",
      "/FloraPod"
    ],
    "puppeteerArgs": [
      "--no-sandbox",
      "--disable-setuid-sandbox"
    ],
    "source": "dist"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-pdf-viewer": "^0.1.0",
    "react-router-dom": "^6.23.1",
    "vite-plugin-ssr": "^0.4.142"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "puppeteer": "^23.9.0",
    "react-snap": "^1.23.0",
    "vite": "^5.4.1"
  }
}
